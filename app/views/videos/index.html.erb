<div class="">
  <% if @videos.any? %>
    <% @videos.each do |video| %>
      <div class="w-full md:max-w-6xl flex flex-wrap">
        <div class="w-full md:w-1/4 p-4 text-center text-gray-200">
          <img src="<%= video.thumbnail['url'] %>" />
        </div>
        <div class="w-full md:w-3/4 p-4 text-left flex flex-col">
          <div class="text-xl text-black-700 flex flex-row items-center">
            <span class="mr-4"><%= video.title %></span>
            <% if video.needs_subscription? %>
              <span class="rounded-full bg-indigo-500 uppercase px-2 py-1 text-xs font-bold flex items-center text-indigo-100">
                subscrirption
              </span>
            <% end %>
          </div>
          <div class="text-sm text-gray-700 mt-2"><%= video.short_description %></div>
          <div class="text-sm text-gray-700 mt-4"><%= video.created_at %></div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="w-full items-center flex flex-col justify-center min-h-screen">
      No more videos to display...
    </div>
  <% end %>
</div>

<div class="w-full fixed bottom-0 bg-white text-center px-2 py-4">
  <%= @videos.prev_link %>
  <%= @videos.next_link %>
</div>